<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.vs.messaging.MessageOption"
   android:id="@+id/messageoptionlayout"
    android:background="#ffffffff">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sender :"

        android:textColor="#ff61ca38"
        android:id="@+id/textView3"
        android:layout_alignParentStart="true"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textColor="#ff000000"
        android:text="Sender Name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/optionsender"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Message"
        android:id="@+id/textView5"
        android:textColor="#ff61ca38"

        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Small Text"

        android:textColor="#ff000000"
        android:id="@+id/optionmessage"
        android:layout_marginTop="29dp"

        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"

        style="@style/btn_white_large"

        android:layout_height="48dp"
        android:text="Insert It to Database"
        android:id="@+id/bt1"
        android:layout_marginTop="94dp"
        android:layout_below="@+id/optionmessage"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
